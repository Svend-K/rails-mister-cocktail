<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <% @cocktails.each do |cocktail| %>
          <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          <p><%= link_to "Delete", cocktail_path(cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" } %><p>
        <% end %>
          <p><%= link_to "new cocktail", new_cocktail_path %></p>
       </div>
    </div>
  </div>
</div>
